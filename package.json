{
  "private": true,
  "name": "monorepo-starter",
  "version": "1.0.0",
  "description": "Starter for monorepositories",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "jest",
    "start": "nodemon -e ts --exec ts-node -r tsconfig-paths/register packages/server/src/main.ts --project=packages/server/tsconfig.json",
    "start-prod": "nodemon -e ts --exec ts-node -r tsconfig-paths/register packages/server/dist/main.js --project=packages/server/tsconfig.json",
    "boot": "lerna bootstrap",
    "pub": "lerna publish from-package",
    "build": "yarn clean && tsc -b -f packages",
    "clean": "rimraf packages/**/dist packages/**/out-tsc* packages/**/*.tsbuildinfo"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/node": "^17.0.0",
    "jest": "^27.0.3",
    "lerna": "^4.0.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.3.2"
  }
}
