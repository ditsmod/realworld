{
  "private": true,
  "name": "monorepo-starter",
  "version": "1.0.0",
  "description": "Starter for monorepositories",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "npm run build && jest",
    "start": "npm run build && node -r tsconfig-paths/register packages/server/dist/main.js",
    "start-prod": "node -r tsconfig-paths/register packages/server/dist/main.js",
    "pub": "lerna publish from-package",
    "build": "tsc -b packages",
    "clean": "rimraf packages/**/dist packages/**/out-tsc* packages/**/*.tsbuildinfo"
  },
  "devDependencies": {
    "@types/eslint": "^8.21.0",
    "@types/jest": "^29.5.3",
    "@types/node": "~18.11.19",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "bunyan": "^1.8.15",
    "eslint": "^8.33.0",
    "jest": "^29.4.1",
    "lerna": "^7.1.5",
    "nodemon": "^3.0.1",
    "prettier": "^2.8.3",
    "rimraf": "^4.1.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.9.5"
  }
}
