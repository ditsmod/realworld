{
  "private": true,
  "type": "module",
  "name": "monorepo-starter",
  "version": "1.0.0",
  "description": "Starter for monorepositories",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "npm run build && npm run esm-jest",
    "esm-jest": "node --experimental-vm-modules --no-warnings=ExperimentalWarning --enable-source-maps node_modules/jest/bin/jest.js",
    "test1": "jest -c jest.config1.ts",
    "start": "npm run build && node --enable-source-maps -r dotenv/config packages/server/dist/main.js dotenv_config_path=packages/server/.env",
    "start-prod": "npm run build && node -r dotenv/config packages/server/dist/main.js dotenv_config_path=packages/server/.env",
    "build": "tsc -b packages",
    "clean": "rimraf packages/*/dist*",
    "postinstall": "npm run clean"
  },
  "devDependencies": {
    "@types/eslint": "^8.44.2",
    "@types/jest": "^29.5.4",
    "@types/node": "~18.11.19",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "bunyan": "^1.8.15",
    "eslint": "^8.49.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^2.8.8",
    "rimraf": "^4.4.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
