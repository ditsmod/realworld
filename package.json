{
  "private": true,
  "type": "module",
  "name": "monorepo-starter",
  "version": "1.0.0",
  "description": "Starter for monorepositories",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "npm run build && npm run esm-jest",
    "esm-jest": "node --env-file=packages/server/.env --experimental-vm-modules --no-warnings=ExperimentalWarning --enable-source-maps node_modules/jest/bin/jest.js",
    "start": "npm run build && nodemon --env-file=packages/server/.env --enable-source-maps packages/server/dist/main.js",
    "start-prod": "npm run build && node --env-file=packages/server/.env packages/server/dist/main.js",
    "build": "tsc -b packages",
    "clean": "rimraf packages/*/dist*",
    "lint": "eslint .",
    "postinstall": "npm run clean"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/eslint__js": "^8.42.3",
    "@types/jest": "^29.5.12",
    "@types/node": "~18.11.19",
    "bunyan": "^1.8.15",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "prettier": "^2.8.8",
    "rimraf": "^4.4.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.5",
    "typescript-eslint": "^8.2.0"
  },
  "engines": {
    "node": ">= 20.6.0"
  }
}
