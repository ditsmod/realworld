{
  "private": true,
  "type": "module",
  "author": "Костя Третяк <ktretiak.in.ua@gmail.com>",
  "name": "server",
  "description": "Ditsmod application",
  "version": "1.0.0",
  "main": "dist/index",
  "types": "dist/index",
  "directories": {
    "lib": "src"
  },
  "scripts": {
    "start": "npm run build && node -r dotenv/config dist/main.js",
    "esm-jest": "node --experimental-vm-modules ../../node_modules/jest/bin/jest.js",
    "test": "tsc -b tsconfig.test.json && npm run esm-jest",
    "build": "tsc -b tsconfig.build.json",
    "clean": "rimraf dist*"
  },
  "imports": {
    "#postman-collection": "./test/conduit.postman-collection.json",
    "#services-per-app/*": "./dist/app/services-per-app/*",
    "#src/*": "./dist/*",
    "#configs/*": "./dist/app/configs/*",
    "#classes/*": "./dist/app/classes/*",
    "#service/*": "./dist/app/modules/service/*",
    "#routed/*": "./dist/app/modules/routed/*",
    "#models/*": "./dist/app/models/*",
    "#utils/*": "./dist/app/utils/*",
    "#shared/*": "shared/*"
  },
  "dependencies": {
    "@ditsmod/body-parser": "^2.12.0-beta.2",
    "@ditsmod/core": "^2.47.0-beta.1",
    "@ditsmod/cors": "^2.4.0-beta.2",
    "@ditsmod/i18n": "^2.8.0-beta.2",
    "@ditsmod/jwt": "^2.4.0-beta.2",
    "@ditsmod/openapi": "^2.20.0-beta.2",
    "@ditsmod/openapi-validation": "^2.9.0-beta.3",
    "@ditsmod/return": "^2.4.0-beta.2",
    "@ditsmod/router": "^2.6.0-beta.2",
    "@ts-stack/chain-error": "^1.2.0",
    "@ts-stack/cookies": "^1.0.3",
    "@ts-stack/openapi-spec": "^3.1.4",
    "bunyan": "^1.8.15",
    "dotenv": "^16.3.1",
    "mysql": "^2.18.1",
    "punycode": "^2.3.0",
    "shared": "*"
  },
  "devDependencies": {
    "@ditsmod/testing": "^2.4.0-beta.2",
    "@types/bunyan": "^1.8.8",
    "@types/dotenv": "^8.2.0",
    "@types/eslint": "^8.44.2",
    "@types/mysql": "^2.15.19",
    "@types/newman": "^5.3.3",
    "@types/node": "~20.5.1",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint": "^8.47.0",
    "jest": "^29.6.2",
    "lerna": "^7.1.5",
    "newman": "^5.3.2",
    "prettier": "^3.0.2",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6"
  }
}
