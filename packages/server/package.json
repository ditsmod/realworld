{
  "private": true,
  "type": "module",
  "author": "Костя Третяк <ktretiak.in.ua@gmail.com>",
  "name": "server",
  "description": "Ditsmod application",
  "version": "1.0.0",
  "main": "dist/index",
  "types": "dist/index",
  "directories": {
    "lib": "src"
  },
  "scripts": {
    "start": "npm run build && node --watch --env-file=.env --enable-source-maps dist/main.js",
    "start-prod": "npm run build && node --env-file=.env dist/main.js",
    "test": "npm run build-test && node --env-file=.env --enable-source-maps ../../node_modules/.bin/vitest",
    "build-test": "tsc -b tsconfig.test.json",
    "build": "tsc -b tsconfig.build.json",
    "watch": "npm run build -- --watch",
    "start:dev": "concurrently -r 'npm:watch' 'npm:start'",
    "clean": "rimraf dist*"
  },
  "imports": {
    "#services-per-app/*": "./dist/app/services-per-app/*",
    "#app/*": "./dist/app/*",
    "#configs/*": "./dist/app/configs/*",
    "#classes/*": "./dist/app/classes/*",
    "#service/*": "./dist/app/modules/service/*",
    "#routed/*": "./dist/app/modules/routed/*",
    "#models/*": "./dist/app/models/*",
    "#utils/*": "./dist/app/utils/*",
    "#shared": "shared"
  },
  "dependencies": {
    "@ditsmod/authjs": "^3.0.0-alpha.3",
    "@ditsmod/body-parser": "^3.0.0-alpha.3",
    "@ditsmod/core": "^3.0.0-alpha.3",
    "@ditsmod/cors": "^3.0.0-alpha.3",
    "@ditsmod/i18n": "^3.0.0-alpha.3",
    "@ditsmod/jwt": "^3.0.0-alpha.3",
    "@ditsmod/openapi": "^3.0.0-alpha.3",
    "@ditsmod/openapi-validation": "^3.0.0-alpha.3",
    "@ditsmod/routing": "^3.0.0-alpha.3",
    "@ts-stack/chain-error": "^1.4.0",
    "@ts-stack/cookies": "^1.2.2",
    "@ts-stack/openapi-spec": "^3.1.6",
    "bunyan": "^1.8.15",
    "mysql2": "^3.14.1",
    "punycode": "^2.3.1"
  },
  "devDependencies": {
    "@ditsmod/testing": "^3.0.0-alpha.3",
    "@types/bunyan": "^1.8.11",
    "@types/newman": "^5.3.6",
    "@types/supertest": "^6.0.3",
    "newman": "^5.3.2",
    "supertest": "^7.1.3"
  },
  "engines": {
    "node": ">= 20.6.0"
  }
}
